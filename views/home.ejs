<!DOCTYPE html>
<html>
  <head>
    <title><%=title%></title>
    <script  src="https://kit.fontawesome.com/b3348ae33f.js"
      crossorigin="anonymous"
  ></script>
  <link rel="stylesheet" href="../assets/css/home.css">
    <meta charset="UTF-8" />
  </head>
  <body>
    <h1>TODO APP</h1>
    <hr/>
    <form action="create-task" method="post">
      <label for="Description">Description</label>
      <input id="Description" type="text" name="Description" placeholder="What do you need to do ?"/>
      <div class="make-inline">
        <label for="Category">Category</label><br/>
      <select id="Category" name="Category" >
        <option disabled selected>Choose a category</option>
        <option value="personal">Personal</option>
        <option value="school">School</option>
        <option value="work">Work</option>
        <option value="other">Other</option>
      </select>
      </div>
      <div class="make-inline">
        <label for="Date">Due Date</label><br/>
      <input id="Date" type="date" name="Date" />
      </div>
      <hr/>
      <button id="add-task" class="button-85"><i class="fa-solid fa-plus fa-beat"></i>ADD TASK</button>
      <button id="delete-task" class="button-85"><i class="fa-solid fa-trash"></i>DELETE TASK</button>
    </form>
    <hr/>
    <ul>
        <%for(let i of tasks){%>
            <li>
                <div class="list-item-con">
                  <div class="task-check"><input type="checkbox"/></div>
                  <div class="item-desc"><div><b><%=i.description%></b></div><div><i class="fa-solid fa-calendar-days"></i><%=i.date%></div></div>
                  <div class="item-type-con"><div class="item-type <%=i.type%>"><div><%=i.type%></div></div></div>
                </div>
              </li>
        <%}%>
    </ul>
  </body>
</html>