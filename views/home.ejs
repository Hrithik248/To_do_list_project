<!DOCTYPE html>
<html>
  <head>
    <title><%=title%></title>
    <script  src="https://kit.fontawesome.com/b3348ae33f.js"
      crossorigin="anonymous"
  ></script>
  <link rel="stylesheet" type="text/css" href="/css/home.css">
    <meta charset="UTF-8" />
  </head>
  <body>
    <h1>TODO APP</h1>
    <hr/>
    <form action="create-task" method="post">
      <label for="Description">Description</label>
      <input id="Description" type="text" name="description" placeholder="What do you need to do ?"/>
      <div class="make-inline">
        <label for="Category">Category</label><br/>
      <select id="Category" name="category" >
        <option disabled selected>Choose a category</option>
        <option value="personal">Personal</option>
        <option value="school">School</option>
        <option value="work">Work</option>
        <option value="other">Other</option>
      </select>
      </div>
      <div class="make-inline">
        <label for="Date">Due Date</label><br/>
      <input id="Date" type="date" name="date" />
      </div>
      <hr/>
      <button id="add-task" class="button-85" type="submit"><i class="fa-solid fa-plus fa-beat"></i>ADD TASK</button>
      <a href="delete-task"><button id="delete-task" class="button-85"><i class="fa-solid fa-trash"></i>DELETE TASK</button></a>
    </form>
    <hr/>
    <ul>
        <%for(let i of tasks){%>
            <li>
                <div class="list-item-con">
                  <div class="task-check">
                    <a href="toggle-task/?id=<%=i._id%>"><input type="checkbox"/></a>
                  </div>
                  <div class="item-desc"><div><b><%=i.description%></b></div><div><i class="fa-solid fa-calendar-days"></i><%=i.date%></div></div>
                  <div class="item-type-con"><div class="item-type <%=i.category%>"><div><%=i.category%></div></div></div>
                </div>
              </li>
        <%}%>
    </ul>
  </body>
</html>